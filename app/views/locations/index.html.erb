<div class="container"> 

 <h2>Import Locations CSV</h2>

 <%= form_tag import_locations_path, multipart: true do %>
   <%= file_field_tag :file%>
   <%= submit_tag "Import Locations", class: "btn btn-primary"%>
 <% end %>

<hr>
<%= link_to "Create Location", new_location_path, class: "btn btn-success"%>
<hr>
<h2>Find Location by geoname_id!</h2>
    <form action="<%= locations_path %>" method="GET" class="d-flex">
      <input name="id" class="form-control me-2" type="number" placeholder="Enter geoname_id" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Find</button>
    </form>
<hr>

  <h1>Locations</h1>

  <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Geoname_ID</th>
      <th scope="col">Country</th>
      <th scope="col">City</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @locations.each do |location| %>
    <tr>
      <th scope="row"><%= location.id %></th>
      <td><%= location.geoname_id %></td>
      <td><%= location.country_name %></td>
      <td><%= location.city_name %></td>
      <td> <%= link_to "Show", location, class: "btn btn-secondary" %></td>
    </tr>
    <% end %>
    <tr>
  </tbody>
</table>


  <%== pagy_bootstrap_nav(@pagy) %>
    

  

  </div>